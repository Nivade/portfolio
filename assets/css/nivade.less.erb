 @import "mixins.scss";

$navbar-c: #242121;
$navbar-border-c: rgba(255, 255, 255, 0.3);
$navbar-dropdown-button-c: #706767;
$navbar-dropdown-button-bars-c: #000;



html {
  @include wh(100%);
}

body {
  @include wh(100%);
  font-family: "Lora", "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #fff;
  background-color: #fff;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0.2);
}

p {
  font-size: 20px;

  .small {
    font-size: 16px;
  }
}

a, a:hover, a:focus, a:active {
  color: #95B6BC;
  outline: none;
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;
  text-transform: uppercase;
  font-weight: 700;
}

.img-centered {
  margin: 0 auto;
}




.intro {
  display: table;
  width: 100%;
  height: auto;
  padding: 100px 0;
  text-align: center;
  color: #fff;
  background: #000 url('images/bg.jpg') no-repeat scroll bottom center;
  @include background_cover();

  .intro-body {
    display: table-cell;
    vertical-align: middle;
    .brand-heading {
      font-size: 60px;
    }
    .intro-text {
      font-size: 18px;
    }
  }
}

@media (min-width: 767px) {
  .intro {
    height: 100%;
    padding: 0;

    .intro-body {
      .brand-heading {
        font-size: 100px;
      }
      .intro-text {
        font-size: 25px;
      }
    }
  }
}

.btn-circle {
  width: 70px;
  height: 70px;
  margin-top: 15px;
  padding: 7px 16px;
  border: 2px solid #fff;
  border-radius: 35px;
  font-size: 40px;
  color: #fff;
  background: transparent;

  @include set_transition(background, .3s, ease-in-out);

  &:hover, &:focus {
    outline: none;
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }
}


.navbar {
  margin-bottom: 0;
  border-bottom: 1px solid $navbar-border-c;
  text-transform: uppercase;
  font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;
  background-color: $navbar-c;

  .navbar-header {
    // Dropdown button
    .navbar-toggle {
        background: $navbar-dropdown-button-c;
        // Dropdown button bars
        .icon-bar {
          background: $navbar-dropdown-button-bars-c;
        }
    }
    .page-scroll {
      @include set_transition(all, .3s, ease-in-out);
    }
  }
  .nav {
    li {
      &:active {
        background-color: $navbar-border-c;
      }

      a {
        color: #fff;
        @include set_transition(background, .3s, ease-in-out);
        &:hover, &:focus, .active {
          background-color: $navbar-border-c;
        }
      }
    }
  }
}

@media (min-width: 767px) {
  .navbar {
    padding: 20px 0;
    border-bottom: none;
    letter-spacing: 1px;
    background: transparent;
    -webkit-transition: background .5s ease-in-out, padding .5s ease-in-out;
    -moz-transition: background .5s ease-in-out, padding .5s ease-in-out;
    transition: background .5s ease-in-out, padding .5s ease-in-out;
  }

  .top-nav-collapse {
    padding: 0;
    background-color: $navbar-c;
  }

  .navbar-custom.top-nav-collapse {
    border-bottom: 1px solid $navbar-border-c;
  }
}

#map {
  height: 400px;
}
@media (min-width: 767px) {
  #map {
    height: 400px;
  }
}

section {
  padding: 100px 0;

  &#about {
    padding: 100px 0px 0px;
  }

  .container-fluid {
    padding: 0;
  }

  h2 {
    margin: 0;
    font-size: 3em;
  }

  .success {
    background: #332F2F;
    color: white;
    a, a:hover, a:focus, a:active, a.active {
      color: #2c3e50;
      outline: none;
    }
  }


}

@media (max-width: 767px) {
  section {
    padding: 75px 0;
    .first {
      padding-top: 75px;
    }
  }
}

#portfolio {
  h2, p {
    color: #363131 !important;
  }
  .portfolio-item {
    margin: 0 0 15px;
    right: 0;
  }
  .portfolio-link {
    display: block;
    position: relative;
    max-width: 400px;
    margin: 0 auto;
  }
  .caption {
    background: rgba(133, 122, 122, 0.9);
    position: absolute;
    opacity: 0;
    @include wh(100%);
    @include set_transition(all, .5s, ease);
    &:hover {
      opacity: 1;
    }
    .caption-content {
      position: absolute;
      width: 100%;
      height: 20px;
      font-size: 20px;
      text-align: center;
      top: 50%;
      margin-top: -12px;
      color: white;
      i {
        margin-top: -12px;
      }
      h3, h4 {
        margin: 0;
      }
    }
  }
  input {
    font-family: "Lora", "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: #000;
    background-color: #fff;
  }

  * {
    z-index: 2;
  }
}

@media (min-width: 767px) {
  #portfolio .portfolio-item {
    margin: 0 0 30px;
  }
}

form {
  p {
    color: black;
  }

  label {
    color: $navbar-c;
  }
}

.form-group {
  button {
    font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif !important;
    background-color: $navbar-c;
    color: white;
    border: none !important;
    @include border_radius(0);

    &:hover {
      background-color: black !important;
    }


  }
  .form-control {
    @include border_radius(0);
  }
}

.btn-outline {
  color: white;
  font-size: 20px;
  border: solid 2px white;
  background: transparent;
  transition: all 0.3s ease-in-out;
  margin-top: 15px;
  &:hover, &:focus, &:active, .active {
    color: #95B6BC;
    background: white;
    border: solid 2px white;
  }
}

.floating-label-form-group {
  position: relative;
  margin-bottom: 0;
  padding-bottom: 0.5em;
  border-bottom: 1px solid #eeeeee;
}

.floating-label-form-group input,
.floating-label-form-group textarea {
  z-index: 1;
  position: relative;
  padding-right: 0;
  padding-left: 0;
  border: none;
  border-radius: 0;
  font-size: 1.5em;
  background: none;
  box-shadow: none !important;
  resize: none;
}

.floating-label-form-group label {
  display: block;
  z-index: 0;
  position: relative;
  top: 2em;
  margin: 0;
  font-size: 0.85em;
  line-height: 1.764705882em;
  vertical-align: baseline;
  opacity: 0;
  -webkit-transition: top 0.3s ease, opacity 0.3s ease;
  -moz-transition: top 0.3s ease, opacity 0.3s ease;
  -o-transition: top 0.3s ease, opacity 0.3s ease;
  transition: top 0.3s ease, opacity 0.3s ease;
}

.floating-label-form-group:not(:first-child) {
  padding-left: 14px;
  border-left: 1px solid #eeeeee;
}

.floating-label-form-group-with-value label {
  top: 0;
  opacity: 1;
}

.floating-label-form-group-with-focus label {
  color: #95B6BC;
}

form .row:first-child .floating-label-form-group {
  border-top: 1px solid #eeeeee;
}

footer {
  color: white;
  h3 {
    margin-bottom: 30px;
  }
  .footer-above {
    padding-top: 50px;
    background-color: #363131;
  }
  .footer-col {
    margin-bottom: 50px;
  }
  .footer-below {
    padding: 25px 0;
    background-color: #2B2828;
  }
}

.btn-social {
  display: inline-block;
  height: 50px;
  width: 50px;
  border: 2px solid white;
  border-radius: 100%;
  text-align: center;
  font-size: 20px;
  line-height: 45px;
}

.btn:focus,
.btn:active,
.btn.active {
  outline: none;
}

.scroll-top {
  position: fixed;
  right: 2%;
  bottom: 2%;
  width: 50px;
  height: 50px;
  z-index: 1049;

  .btn {
    font-size: 20px;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    line-height: 28px;
    &:focus { outline: none;}
  }
}





.portfolio-modal .modal .fade {
}


.modal-content {
  background: rgba(0, 0, 0, 0.5);
  border-radius: 0;
  background-clip: border-box;
  -webkit-box-shadow: none;
  box-shadow: none;
  border: none;
  min-height: 100%;
  padding: 100px 0;
  text-align: center;

  .container {
    .row {
      background-color: rgba(255, 255, 255, 0.8);
    }
  }

  .close-modal {
    position: absolute;
    width: 75px;
    height: 75px;
    background-color: transparent;
    top: 25px;
    right: 25px;
    cursor: pointer;

    &:hover {
      opacity: 0.3;
    }

    .modal-close-arrow {
        height: 75px;
        width: 1px;
        background-color: #2c3e50;
    }
    .lr {
      @extend .modal-close-arrow;
      @include set_transform(rotate(45deg));
      z-index: 1051;
      margin-left: 35px;
      .rl {
        @extend .modal-close-arrow;
        @include set_transform(rotate(90deg));
        z-index: 1052;
      }
    }
  }

  h2 {
    margin: 0;
    font-size: 3em;
    color: black;
  }

  p { color: black; }

  .img {
    margin-bottom: 30px;
  }

  .item-details {
    margin: 30px 0;
  }
}


.modal-backdrop {
  opacity: 0.5;
  background-color: black !important;
}
